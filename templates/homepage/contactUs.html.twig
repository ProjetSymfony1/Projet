{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}

    <!-- Header-->

    <!-- Body-->
    <div class="container-fluid content">
        <div class = "row">
            <div class="col-6 my-auto">
                <form style="padding: 50px 0 10px 0;">
                    <div class="ma-form">
                        <div class="form-group">
                            <label for="messageTitle">Message title</label>
                            <div class="border-class">
                                <input type="text" class="form-control" id="messageTitle" placeholder="Objet du message" >
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="nom">Nom</label>
                                <div class="border-class">
                                    <input type="text" class="form-control" id="nom" placeholder="ex: DUPONT...">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="prenom">Prenom</label>
                                <div class="border-class">
                                    <input type="text" class="form-control" id="prenom" placeholder="ex: Martin...">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="mail">Mail</label>
                                <div class="border-class">
                                    <input type="text" class="form-control" id="mail" placeholder="abc@gmail.com,...">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="tel">Phone Number</label>
                                <div class="border-class">
                                    <input type="Number" class="form-control" id="tel" placeholder="ex: 0123456789">
                                </div>
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="message">Message</label>
                            <div class="border-class">
                                <textarea class="form-control" id="message" placeholder="Votre message..." rows="10">

                                </textarea>

                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>

            <div class="col-4">
                <div class="titre-border mb-4 ml-0">
                    <p class="text-center h3 my-2">Contact US</p>
                </div>
                <div>
                    <iframe width="400" height="350" src="https://www.openstreetmap.org/export/embed.html?bbox=2.2944653036392997%2C48.85616910338847%2C2.3017609121598075%2C48.86008672507507&amp;layer=mapnik&amp;marker=48.85812795255818%2C2.298113107899553" style="border: 1px solid black"></iframe>
                    <div style="line-height: 0.7em; padding-top: 20px; font-style: italic;">
                        <p class="regularTitle"><b>Coordonnées :</b></p>
                        <table class="contactInfo">
                            <tr>
                                <td>
                                    <img src="{{ asset('image/map.png') }}" width="20px"/>
                                </td>
                                <td>
                                    18 avenue des champs élysées<br><br>
                                    75015 Paris
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="{{ asset('image/phone.png') }}" width="20px"/>
                                </td>
                                <td>
                                    +33 1 98 65 44 02
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="{{ asset('image/email.png') }}" width="20px"/>
                                </td>
                                <td>
                                    Contact@Gusto.Me
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <script
                        src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap&libraries=&v=weekly"
                        async
                ></script>
            </div>

        </div>
    </div>


{% endblock %}