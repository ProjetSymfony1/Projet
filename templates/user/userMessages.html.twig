{% extends 'base.html.twig' %}

{% block title %}{{ "" |trans}}My Messages{% endblock %}

{% block body %}

<div class="shadow-lg p-5 mb-5 bg-white rounded container">

    <div class="card text-center">
        <div class="card-header">
            {{ "Messages" |trans}}
        </div>
        <div class="card-body">
            <h5 class="card-title"> {{ "You reached to us and we reached back !" |trans}} </h5>
            <p class="card-text"> {{ "If it hasn't already been processed, your question is in safe hands, an admin will be there soon !" |trans}} </p>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">{{ "Object" |trans}}</th>
                    <th scope="col">{{ "Message" |trans}}</th>
                    <th scope="col">{{ "Status" |trans}}</th>
                    <th scope="col">{{ "Manage" |trans}}</th>
                </tr>
                </thead>
                <tbody>
                {% for msg in messages %}
                <td>{{ msg.object }}</td>
                <td>{{ msg.message }}</td>
                <td>{{ msg.status }}
                </td>
                {% if msg.status == 'Being processed'%}
                <td>  <a href="{{ path('delMessage') }}?idMsg={{ msg.id }}" class="btn btn-addCart"> {{ "Delete" |trans}} </a> </td>
                {% endif %}

                </tbody>
                {% endfor %}
                </table>
        <div class="card-footer text-muted">
            GustoHelpService
        </div>
        </div>
    </div>
</div>

{% endblock %}