{% extends 'user/baseUser.html.twig' %}

{% block title %}Update Info User{% endblock %}

{% block body %}
    <div class="container-fluid content" style="width: 80%; margin: auto;">
        <div  style="padding: 20px;">
            <div class="row justify-content-around">
                <div class="col-3 text-center" >
                    <a href = "#"   class="btn btn-outline-primary btn-block" role = "button">RESERVATION</a> &nbsp;&nbsp;
                </div>
                <div class="col-3 text-center">
                    <a href = "#" class="btn btn-outline-primary btn-block" role = "button">FAVORIS</a> &nbsp;&nbsp;
                </div>
                <div class="col-3 text-center">
                    <a href = {{ path('user-contactForm') }}  class="btn btn-outline-primary btn-block text-button" role = "button" >
                    CONTACT</a> &nbsp;&nbsp;
                </div>
                <div class="col-3 text-center">
                    <a href = {{ path('user-updateForm') }}  class="btn btn-outline-primary btn-block text-nowrap active" role = "button">MON COMPTE</a>
                </div>
            </div>
        </div>

        <div class="col-12">
            <form>
                <div class="ma-form">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nom">Nom</label>
                            <div class="border-class">
                                <input type="text" class="form-control" id="nom" placeholder="ex: DUPONT, TRAN,...">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="prenom">Prenom</label>
                            <div class="border-class">
                                <input type="text" class="form-control" id="prenom" placeholder="ex: Jessica, Ha Phuong,...">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="mail">Mail</label>
                        <div class="border-class">
                            <input type="text" class="form-control" id="mail" placeholder="abc@gmail.com,...">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="mdp">Password</label>
                        <div class="border-class">
                            <input type="Password" class="form-control" id="mdp" placeholder="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="adresse">Adresse</label>
                        <div class="border-class">
                            <input type="text" class="form-control" id="adresse" placeholder="100 rue XYZ, 75000 Paris, France">
                        </div>
                    </div>
                </div>
                <div class="btn-submit" style="background-color: yellow">
                    <button type="submit" class="btn btn-primary">UPDATE</button>
                </div>
                <br><br>
            </form>
        </div>
    </div>




{% endblock %}